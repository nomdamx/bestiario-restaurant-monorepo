{
  "cli": {
    "version": ">= 16.28.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk" 
      },
      "env": {
        "PROD_FLASK_API_URL": "$PROD_FLASK_API_URL" 
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      },
      "autoIncrement": true,
      "env": {
        "PROD_FLASK_API_URL": "$PROD_FLASK_API_URL" 
      }
    }
  },
  "submit": {
    "production": {}
  }
}
